<%- include('../partials/header') %>

    <div class="sidexside">

        <% if (user) { %>
        <div id=widget><a class="weatherwidget-io" href="https://forecast7.com/en/34d05n118d24/los-angeles/?unit=us"
            data-label_1="LOS ANGELES" data-label_2="California" data-days="5" data-theme="tile_wood">LOS ANGELES California</a>
            <script>!function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0]; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = 'https://weatherwidget.io/js/widget.min.js'; fjs.parentNode.insertBefore(js, fjs); } }(document, 'script', 'weatherwidget-io-js');</script>
        </div>
        <% } %>

        <div class="vertical" id="allEventMargin">
            <h3><%= titlePage %></h3>
            <% if(event.dateOf>= today) { %>
            <a href="/events/<%= event._id %>/edit">EDIT EVENT INFO</a>
            <% }  %>
            <table>
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Location</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Notes</th>
                        <th>Tags</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><%= event.title %></td>
                        <td><%= event.location.locationName %></td>
                        <td><%= event.dateOf.toLocaleDateString() %></td>
                        <td><%= event.time %></td>
                        <td><%= event.notes %></td>
                        <td><% event.tags.forEach(function(tag) { %>
                            <form action="/tags/<%= tag.substr(1) %>/events/<%= event._id %>?_method=DELETE" method="POST">
                                <input id="tags" type="submit" value="<%= tag %>">
                            </form>
                        <% }) %></td>
                    </tr>
                </tbody>
            </table>

            <% if(event.dateOf >= today) { %>
                <h5>Click on a tag to add one!</h5>
                <% if(tags.length) { %>
                    <% tags.forEach(function(t) { %>
                        <form action="/events/<%= t._id %>/tags/<%= event._id %>" method="POST">
                            <input id="tags" type="submit" value="<%= t.tag %>">
                        </form>
                    <% }) %>
                <% } else { %>
                    <h1>ADD SOME TAGS!</h1>
                <% } %>
            
                <div id="createTag">
                    <form action="/tags/event/<%= event._id %>" method="POST">
                        <label>Add A New Tag!</label>
                        <input placeholder="format: '#tag'" required pattern="#[a-z-]{2,}" type="text" name="tag">
                        <input type="submit" value="Add Tag">
                    </form>
                </div>
            <% } %>

        </div>
    </div>

<%- include('../partials/footer') %>