        <h3><%= titlePage %></h3>
        <form class="vertical" action="/events/<%= event._id>" method="PUT">
            <label>Title</label>
            <input type="text" name="title" value="<%= event.title%>">
            <label>Location</label>
            <input type="text" name="locationName" value="<%= event.locationName %>">
            <label>Date</label>
            <input type="date" name="dateOf" value="<%= event.dateOf%>">
            <label>Time</label>
            <input type="time" name="time" value="<%= event.time%>">
            <label>Notes</label>
            <textarea type="textarea" name="notes"><%= event.notes%></textarea>
            <input type="submit" value="SAVE NEW INFO">
        </form>
    </div>

    



